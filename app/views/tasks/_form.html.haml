%fieldset
  %legend
    = controller.action_name.capitalize
    /Task
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :start_date, :class => 'control-label'
    .controls
      = f.date_select :start_date, :class => 'date_select'
  .control-group
    = f.label :end_date, :class => 'control-label'
    .controls
      = f.date_select :end_date, :class => 'date_select'
  .control-group
    = f.label :difficulty, :class => 'control-label'
    .controls
      = f.number_field :difficulty, :class => 'number_field'
  .control-group
    = f.label :completed, :class => 'control-label'
    .controls
      = f.check_box :completed, :class => 'check_box'
  .control-group
    = f.label :task_type_id, :class => 'control-label'
    .controls
      = f.number_field :task_type_id, :class => 'number_field'
  .control-group
    = f.label :project_id, :class => 'control-label'
    .controls
      = f.number_field :project_id, :class => 'number_field'
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.number_field :user_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to "Cancel", tasks_path, :class => 'btn'
