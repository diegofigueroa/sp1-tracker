!!! 5
%html{:lang => "en"}
	%head
		%meta{:charset => "utf-8"}/
		%title= content_for?(:title) ? yield(:title) : "Tracker"
		= csrf_meta_tags
		/ Le HTML5 shim, for IE6-8 support of HTML elements
		/[if lt IE 9]
		= javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
		/ styles
		= stylesheet_link_tag "application", :media => "all"
		%link{:href => "#{asset_path('favicon.ico')}", :rel => "shortcut icon"}/
	%body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container
					%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					= link_to("Tracker", projects_path, :class => "brand")
					.container.nav-collapse
						%ul.nav
							
						%ul.nav.pull-right
							%li.divider-vertical
							%li.dropdown
								%a.dropdown-toggle{:href => "#", 'data-toggle' => 'dropdown'}
									%i.icon-user.icon-white
									Account
									%b.caret
								%ul.dropdown-menu
									%li
										= link_to  users_path do
											%i.icon-off
											Logout
		.container
			.content
				.row
					.span2
						.well.sidebar-nav
							%ul.nav.nav-list
								%li.nav-header Tracker
								%li.active
									= link_to projects_path do
										%i.icon-home
										Projects
								%li
									= link_to tasks_path do
										%i.icon-list
										My Tasks
								%li.nav-header My Account
								%li
									= link_to users_path do
										%i.icon-cog
										Settings
								%li.divider
								%li
									= link_to projects_path do
										%i.icon-flag
										Help
					.span10
						= yield :alerts
						= yield
						%footer.footer
							%p &copy; Company 2012
		/Le javascript
		/==================================================
		/ Placed at the end of the document so the pages load faster
		= javascript_include_tag "application"
